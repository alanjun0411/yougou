/* pages/goods_detail/index.wxss */
.rotationChart{
  position: relative;
  box-shadow: 0 1px 3px rgba(0, 0, 0,.3);
}
.rotationChart swiper{
  height: 500rpx;
}
.rotationChart image{
  width: 100%;
  height: 100%;
}
.currentNumber{
  position: absolute;
  bottom: 10px;
  right: 0;
  background-color: rgba(0, 0, 0,.3);
  color: #fff;
  font-size: 26rpx;
  width: 80rpx;
  text-align: center;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
}
.currentNumber .nowcurrent{
  font-size: 35rpx;
}